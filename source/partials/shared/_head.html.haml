%head
  %meta{ charset: "utf-8" }
  %link{ rel: "dns-prefetch", href: "//ajax.googleapis.com" }
  %meta{ name: "viewport", content: "width=device-width" }
  %meta{ name: "apple-mobile-web-app-capable", content: "yes" }
  %meta{ "http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
  - if current_article
    %meta{ property: "og:type", content: "Article" }
    %meta{ property: "og:title", content: current_article.title }
    %meta{ property: "og:description", content: "#{current_article.data.summary_text ? current_article.data.summary_text : ''}" }
    %meta{ name: "description", content: "#{current_article.data.summary_text ? current_article.data.summary_text : ''}" }
    %meta{ property: "og:image", content: "#{current_article.data.image_url ? current_article.data.image_url : 'http://terracoding.com/icon.png' }" }
    %meta{ property: "og:site_name", content: "Terracoding Blog" }
  - else
    %meta{ name: "description", content: data.site.description }
    %meta{ property: "og:description", content: data.site.description }
  %title
    = data.site.title
    = "- #{current_page.data.title}" if current_page.data.title

  %link{ href: "/feed.xml", rel: "alternate", title: data.site.title, type: "application/atom+xml" }

  = stylesheet_link_tag "application"
