%head
  %meta{ charset: "utf-8" }
  %link{ rel: "dns-prefetch", href: "//ajax.googleapis.com" }
  %meta{ name: "viewport", content: "width=device-width" }
  %meta{ name: "apple-mobile-web-app-capable", content: "yes" }
  %meta{ "http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
  %meta{ property: "og:type", content: current_article ? 'article' : 'website' }
  %meta{ property: "og:title", content: current_page.data.title }
  %meta{ property: "og:image", content: current_page.data.image || 'http://www.terracoding.com/icon.png' }
  %meta{ property: "og:site_name", content: "#{data.site.title}#{' Blog' if current_article}" }
  %meta{ property: "og:description", content: current_page.data.summary || data.site.description }
  %meta{ name: "description", content: current_page.data.summary || data.site.description }
  %title
    = data.site.title
    = "- #{current_page.data.title}" if current_page.data.title

  %link{ href: "/feed.xml", rel: "alternate", title: data.site.title, type: "application/atom+xml" }

  = stylesheet_link_tag "application"
